<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">

        <layer-list>

            <item android:width="64dp" android:height="32dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorDarkGreen" />
                    <corners android:topLeftRadius="16dp"
                        android:topRightRadius="16dp"
                        android:bottomLeftRadius="16dp"
                        android:bottomRightRadius="16dp" />
                </shape>
            </item>

            <item
                android:width="27dp" android:height="28dp"
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:gravity="right">
                <shape
                    android:shape= "oval"
                    android:useLevel= "false" >
                    <solid android:color= "@color/colorWhite" />


                </shape>
            </item>

        </layer-list>
    </item>


    <item>
        <layer-list>

            <item android:width="64dp" android:height="32dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorWhite" />
                    <corners android:topLeftRadius="16dp"
                        android:topRightRadius="16dp"
                        android:bottomLeftRadius="16dp"
                        android:bottomRightRadius="16dp" />

                    <stroke android:color="@color/gray"
                        android:width="1dp"/>
                </shape>
            </item>

            <item
                android:width="27dp" android:height="28dp"
                android:left="4dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="2dp">
                <shape android:shape= "oval"
                    android:useLevel= "false" >
                    <solid android:color="#14bab9b9" />
                </shape>
            </item>

            <item
                android:width="27dp" android:height="28dp"
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp">
                <shape
                    android:shape= "oval"
                    android:useLevel= "false" >
                    <solid android:color="#ffffffff" />


                </shape>
            </item>


        </layer-list>
    </item>
</selector>

