<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <include layout="@layout/include_toolbar"/>

   <android.support.v4.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:gravity="center_horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="任务金额"
               android:textColor="@color/colorBlack"
               android:textSize="18sp"
               android:layout_marginTop="38dp"
               />

           <TextView
               android:id="@+id/tv_price"
               android:layout_width="170dp"
               android:layout_height="80dp"
               android:text="$70"
               android:textColor="@color/colorBlack"
               android:textSize="38sp"
               android:background="@drawable/shape_fillet_gray_stroke_6dp"
               android:gravity="center"
               android:layout_marginTop="23dp"
               />


           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="32dp"
               android:layout_marginRight="32dp"
               android:layout_marginTop="24dp">


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="服务费"
                   android:textColor="@color/colorBlack"
                   android:textSize="14sp"
                   />


               <TextView
                   android:id="@+id/tv_service_charge"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="-$10.5"
                   android:textColor="@color/colorBlack"
                   android:textSize="14sp"
                   android:layout_alignParentRight="true"
                   />


           </RelativeLayout>


           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="32dp"
               android:layout_marginRight="32dp"
               android:layout_marginTop="12dp">


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="税费"
                   android:textColor="@color/colorBlack"
                   android:textSize="14sp"
                   />


               <TextView
                   android:id="@+id/tv_taxation"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="-$10.5"
                   android:textColor="@color/colorBlack"
                   android:textSize="14sp"
                   android:layout_alignParentRight="true"
                   />


           </RelativeLayout>


           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="32dp"
               android:layout_marginRight="32dp"
               android:layout_marginTop="12dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="你将得到"
                   android:textColor="@color/colorDarkGreen"
                   android:textSize="16sp"
                   />


               <TextView
                   android:id="@+id/tv_get_price"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="$54.5"
                   android:textColor="@color/colorDarkGreen"
                   android:textSize="16sp"
                   android:layout_alignParentRight="true"
                   />


           </RelativeLayout>


           <View
               android:layout_marginLeft="32dp"
               android:layout_marginRight="32dp"
               android:layout_marginTop="18dp"
               style="@style/viewLine"/>


           <LinearLayout
               android:id="@+id/line_my_advantage"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="32dp"
               android:layout_marginRight="32dp"
               android:layout_marginTop="18dp"
               android:orientation="vertical"
               android:visibility="gone">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="我的优势:"
                   android:textColor="@color/colorBlack"
                   android:textSize="14sp"
                   android:layout_marginBottom="17dp"
                   />


               <TextView
                   android:id="@+id/tv_my_advantage"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="    本人工作认真负责,  办事细心。本人工作认真负责,  办事细心。本人工作认真负责,  办事细心。 "
                   android:textColor="@color/colorBlack"
                   android:textSize="14sp"
                   android:lineSpacingExtra="4dp"
                   />


           </LinearLayout>


           <TextView
               android:id="@+id/tv_next"
               android:layout_width="210dp"
               android:layout_height="36dp"
               android:text="继续"
               android:textColor="#fffefefe"
               android:textSize="15sp"
               android:background="@drawable/shape_fillet_green_18dp"
               android:layout_marginTop="34dp"
               android:gravity="center"
               android:layout_gravity="center_horizontal"
               />

       </LinearLayout>
   </android.support.v4.widget.NestedScrollView>
</LinearLayout>