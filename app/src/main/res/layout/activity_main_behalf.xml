<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">




    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:background="@color/colorGray"
        android:scaleType="centerCrop"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_cardview"
        app:cardCornerRadius="4dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="-30dp"
        android:paddingLeft="34dp"
        android:paddingRight="34dp"
        android:paddingBottom="20dp"
        app:cardElevation="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et_search"
                android:layout_marginTop="16dp"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_underline_gray"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@mipmap/icon_search_type"
                android:textSize="12sp"
                android:hint="想买点什么..."
                android:drawablePadding="25dp"
                android:padding="7dp"
                android:focusable="false"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/tv_click_drinks"
                    style="@style/buyingbehalfTvTypeStyles"
                    android:drawableTop="@mipmap/icon_drinks"
                    android:text="饮料"
                    />

                <TextView
                    android:id="@+id/tv_click_snack"
                    style="@style/buyingbehalfTvTypeStyles"
                    android:drawableTop="@mipmap/icon_snack"
                    android:text="小吃"
                    />

                <TextView
                    android:id="@+id/tv_click_coffee"
                    style="@style/buyingbehalfTvTypeStyles"
                    android:drawableTop="@mipmap/icon_coffee"
                    android:text="咖啡"
                    />

                <TextView
                    android:id="@+id/tv_click_drugs"
                    style="@style/buyingbehalfTvTypeStyles"
                    android:drawableTop="@mipmap/icon_drugs"
                    android:text="药品"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tv_running_errands"
                    style="@style/buyingbehalfTvTypeStyles"
                    android:drawableTop="@mipmap/text_running_errands"
                    android:text="万能跑腿"
                    />

                <TextView
                    android:id="@+id/tv_click_fruits"
                    style="@style/buyingbehalfTvTypeStyles"
                    android:drawableTop="@mipmap/icon_fruits"
                    android:text="水果"
                    />

                <TextView
                    android:id="@+id/tv_click_breakfast"
                    style="@style/buyingbehalfTvTypeStyles"
                    android:drawableTop="@mipmap/icon_breakfast"
                    android:text="早餐"
                    />

                <TextView
                    android:id="@+id/tv_click_expenses"
                    style="@style/buyingbehalfTvTypeStyles"
                    android:drawableTop="@mipmap/icon_daily_expenses"
                    android:text="日用"
                    />

            </LinearLayout>


        </LinearLayout>




    </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大牌代购"
        android:textColor="@color/colorGray"
        android:textSize="17sp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="28dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
</android.support.v4.widget.NestedScrollView>