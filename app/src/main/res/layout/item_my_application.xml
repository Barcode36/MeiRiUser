<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:layout_marginBottom="10dp"
    android:paddingTop="14dp"
    android:paddingRight="14dp"
    android:paddingLeft="14dp"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            />


        <TextView
            android:id="@+id/tv_details_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-03-16  16:00:00"
            android:textColor="@color/colorGray"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海尔大街"
                android:textColor="@color/colorBlack"
                android:textSize="13sp"
                android:drawableLeft="@mipmap/icon_address_task"
                android:drawablePadding="10dp"

                />


            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019/03/16"
                android:textColor="@color/colorBlack"
                android:textSize="13sp"
                android:drawableLeft="@mipmap/icon_time_task"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                />


            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flowlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">
            </com.zhy.view.flowlayout.TagFlowLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="10dp"
            />


    </LinearLayout>

    <View
        style="@style/viewLine"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp">


        <TextView
            android:id="@+id/tv_task_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="任务进行中"
            android:textColor="@color/colorDarkGray"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_finish"
            android:layout_marginRight="17dp"
            android:gravity="right"
            />

        <TextView
            android:id="@+id/btn_finish"
            android:layout_width="100dp"
            android:layout_height="29dp"
            android:text="完成"
            android:layout_centerVertical="true"
            android:textColor="@color/colorWhite"
            android:textSize="13sp"
            android:background="@drawable/shape_fillet_green_6dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</LinearLayout>