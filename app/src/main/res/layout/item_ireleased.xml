<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:layout_marginBottom="10dp"
    android:paddingTop="14dp"
    android:paddingRight="14dp"
    android:paddingLeft="14dp"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周末花园修整"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            />


        <TextView
            android:id="@+id/tv_details_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-03-16  16:00:00"
            android:textColor="@color/colorGray"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海尔大街"
                android:textColor="@color/colorBlack"
                android:textSize="13sp"
                android:drawableLeft="@mipmap/icon_address_task"
                android:drawablePadding="10dp"

                />


            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019/03/16"
                android:textColor="@color/colorBlack"
                android:textSize="13sp"
                android:drawableLeft="@mipmap/icon_time_task"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                />


            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flowlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">
            </com.zhy.view.flowlayout.TagFlowLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="10dp"
            />


    </LinearLayout>

    <View
        style="@style/viewLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系"
            android:textColor="@color/colorDarkGray"
            android:drawableLeft="@mipmap/icon_call_task"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="未完成"
            android:textColor="@color/colorDarkGreen"
            android:textSize="14sp"
            android:gravity="right"
            android:layout_marginRight="18dp"
            />

        <Button
            android:id="@+id/btn_cancel_order"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="取消任务"
            android:textColor="#32BFA3"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/shape_fillet_green_stroke_6dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/btn_state"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="确认支付"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/shape_fillet_light_green_4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:visibility="gone"
            />





    </LinearLayout>





</LinearLayout>