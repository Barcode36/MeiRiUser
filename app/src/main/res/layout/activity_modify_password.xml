<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <include layout="@layout/include_toolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="旧密码"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                />

            <EditText
                android:id="@+id/et_old_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="50dp"
                android:textColorHint="@color/colorGray"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:hint="请输入旧密码"
                />
        </LinearLayout>


        <View
            style="@style/viewLine"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_new_pwd"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                />

            <EditText
                android:id="@+id/et_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="50dp"
                android:textColorHint="@color/colorGray"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:hint="@string/hint_input_new_pwd"
                />
        </LinearLayout>


        <View
            style="@style/viewLine"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_confirm_password"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                />

            <EditText
                android:id="@+id/et_again_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="35dp"
                android:textColorHint="@color/colorGray"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:hint="@string/hint_again_new_pwd"
                />
        </LinearLayout>


        <View
            style="@style/viewLine"/>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="@string/text_sure_modify"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:background="@drawable/shape_fillet_green_22dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="48dp"
            />


    </LinearLayout>

</LinearLayout>