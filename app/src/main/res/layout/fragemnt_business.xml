<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="14dp">

    <TextView
        android:id="@+id/tv_business_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_business_hours"
        android:textColor="@color/colorDarkGray"
        android:drawableLeft="@mipmap/icon_small_time_gray"
        android:drawablePadding="16dp"
        android:textSize="13sp"
        />


    <TextView
        android:id="@+id/tv_business_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="朝阳区太阳宫中路12号楼凯德MALL太阳宫B1层11号商铺"
        android:textColor="@color/colorDarkGray"
        android:drawableLeft="@mipmap/icon_small_address_gray"
        android:drawablePadding="16dp"
        android:textSize="13sp"
        android:layout_marginTop="18dp"
        android:lineSpacingExtra="6dp"
        />

    <TextView
        android:id="@+id/tv_business_science"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商家环境"
        android:textColor="@color/colorDarkGray"
        android:drawableLeft="@mipmap/icon_small_science_gray"
        android:drawablePadding="16dp"
        android:textSize="13sp"
        android:layout_marginTop="18dp"
        android:lineSpacingExtra="6dp"
        />


</LinearLayout>