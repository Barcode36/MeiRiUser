<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal">

    <include layout="@layout/include_toolbar"/>


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥50"
        android:textColor="@color/colorDarkGreen"
        android:textSize="46sp"
        android:layout_marginTop="48dp"
        />

    <LinearLayout
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="44dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保证金说明:"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/tv_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保证金说明保证金说明保证金说明保证金说明保证金说明保证金说明保证金说明保证金说明保证金"
            android:textColor="@color/colorBlack"
            android:textSize="13sp"
            android:lineSpacingExtra="6dp"
            android:layout_marginTop="20dp"
            />


        <CheckBox
            android:id="@+id/cb_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读保证金说明并同意遵守该规则"
            android:textColor="@color/colorGreen"
            android:textSize="12sp"
            android:layout_marginTop="30dp"
            android:button="@drawable/selector_radio_green"
            android:paddingLeft="8dp"
            />


        <TextView
            android:id="@+id/tv_to_pay"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="确认支付"
            android:textColor="#fffefefe"
            android:textSize="15sp"
            android:background="@drawable/shape_fillet_green_18dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            />


    </LinearLayout>

</LinearLayout>