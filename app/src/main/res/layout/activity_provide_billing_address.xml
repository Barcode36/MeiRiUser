<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/base_bg">

    <include layout="@layout/include_toolbar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/shape_fillet_white_4dp"
                android:padding="14dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址栏1"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    />


                <EditText
                    android:id="@+id/et_address01"
                    style="@style/provideBillingAddressEtStyles"
                    android:hint="请输入地址"
                    />

                <View
                    style="@style/viewLine"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址栏2"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    />


                <EditText
                    android:id="@+id/et_address02"
                    style="@style/provideBillingAddressEtStyles"
                    android:hint="请输入地址"
                    />

                <View
                    style="@style/viewLine"/>



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/shape_fillet_white_4dp"
                android:padding="14dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="区域"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    />


                <EditText
                    android:id="@+id/et_region"
                    style="@style/provideBillingAddressEtStyles"
                    android:hint="请输入区域"
                    />

                <View
                    style="@style/viewLine"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="洲"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:layout_marginTop="16dp"
                            />


                        <EditText
                            android:id="@+id/et_continent"
                            style="@style/provideBillingAddressEtStyles"
                            android:hint="请输入所在洲"
                            />

                        <View
                            style="@style/viewLine"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="邮编"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:layout_marginTop="16dp"
                            />


                        <EditText
                            android:id="@+id/et_code"
                            style="@style/provideBillingAddressEtStyles"
                            android:hint="请输入邮编"
                            />

                        <View
                            style="@style/viewLine"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="国家"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    />


                <EditText
                    android:id="@+id/et_country"
                    style="@style/provideBillingAddressEtStyles"
                    android:hint="请输入国家"
                    />

                <View
                    style="@style/viewLine"/>




            </LinearLayout>

            <Button
                android:id="@+id/btn_sumbit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_fillet_green_4dp"
                android:textSize="17sp"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="24dp"
                android:text="提交"/>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>