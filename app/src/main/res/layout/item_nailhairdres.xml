<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/line_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="14dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_food"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/iv_food"
                android:layout_marginLeft="15dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星巴克（大塘店）"
                    android:textColor="@color/colorBlack"
                    android:textSize="17sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/ratingbar"
                        style="@style/RadingSmallStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="3"
                        android:stepSize="0.5"
                        android:isIndicator="true"/>

                    <TextView
                        android:id="@+id/tv_evaluate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.6"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="12sp"
                        android:layout_marginLeft="6dp"
                        />

                    <TextView
                        android:id="@+id/tv_monthly_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_monthly_sale"
                        android:textColor="@color/colorDarkGray"
                        android:layout_marginLeft="16dp"
                        android:textSize="12sp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="美甲"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="12sp"
                        />

                    <View
                        style="@style/viewHighLine"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="9dp"/>

                    <TextView
                        android:id="@+id/tv_delivery_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_delivery_distance"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="12sp"
                        />


                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>




    <View
        style="@style/viewLine"/>

</LinearLayout>